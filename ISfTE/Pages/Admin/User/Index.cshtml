@page
@using ISfTE.Utility

@if (User.IsInRole(SD.AdminRole))
{
    <div class="border backgroundWhite container">
        <div class="row">
            <div class="col-6">
                <h2 class="text-info">User List</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-page="/Account/Register" asp-area="Identity" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp;Add Committee Member</a>
            </div>
        </div>
        <br />
        <br />
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>User Status</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
}
else
{
    <h1 class="text-danger">Access Denied</h1>
}
@section Scripts{
    <script src="~/js/user.js"></script>

}


