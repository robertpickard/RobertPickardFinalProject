@page
@model ISfTE.Pages.Admin.Registration.IndexModel
@using ISfTE.Utility

@{
    ViewData["Title"] = "Registration Index";
}

@if (User.IsInRole(SD.AdminRole))
{
    <div class="border backgroundWhite container">
        <div class="row">
            <div class="col-6">
                <h2 class="text-info">Registrations</h2>
            </div>
        </div>
        <br />
        <br />
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Total Cost</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
}
else
{
    <h1 class="text-danger">Access Denied</h1>
}

@section Scripts{
    <script src="~/js/registration.js"></script>
}

