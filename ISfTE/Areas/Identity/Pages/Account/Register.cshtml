@page
@using ISfTE.Utility
@model RegisterModel
@{
    ViewData["Title"] = "Sign Up";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-10 col-md-offset-2">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Institution"></label>
                <input asp-for="Input.Institution" class="form-control" placeholder="Required" />
                <span asp-validation-for="Input.Institution" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Title"></label>
                <select id="TitleDropdown" class="form-control" asp-for="Input.Title" >
                    <option selected value=""></option>
                    <option value="Dr.">Dr.</option>
                    <option value="Mr.">Mr.</option>
                    <option value="Mrs.">Mrs.</option>
                    <option value="Ms.">Ms.</option>
                    <option value="Professor">Professor</option>
                </select>
                <span asp-validation-for="Input.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" placeholder="Required"/>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" placeholder="Required"/>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PreferredName"></label>
                <input asp-for="Input.PreferredName" class="form-control"/>
                <span asp-validation-for="Input.PreferredName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" placeholder="Required"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Required"/>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" placeholder="Required"/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Required"/>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            @if (User.IsInRole(SD.AdminRole))
            {
                <div class="py-2">
                    <input type="radio" name="rdUserRole" value="@SD.AdminRole" /> @SD.AdminRole
                    <input type="radio" name="rdUserRole" value="@SD.RaterRole" /> @SD.RaterRole
                </div>
            }
            <button type="submit" class="btn btn-primary">Create Account</button>
        </form>
    </div>
